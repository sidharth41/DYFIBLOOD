<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"

    android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBarnoti"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:backgroundTint="@android:color/white"
            app:title="@string/Notifications"


            app:titleTextColor="@color/colorPrimary" />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrv"
        android:scrollbars="none"
        android:layout_marginTop="3dp"
        android:background="@android:color/white"

        android:layout_below="@+id/lcrv"
        android:layout_height="49dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"

            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/Blood_group"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:padding="13dp"
                android:layout_height="match_parent"/>
            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:id="@+id/chipgrp"
                android:visibility="invisible"
                app:singleSelection="true"
                android:layout_height="match_parent"

                app:chipSpacing="25dp">
            <com.google.android.material.chip.Chip
                android:layout_width="80dp"
                android:text="A+"
                app:checkedIcon="@drawable/ic_whatshot_black_24dp"

                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimary"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                app:chipBackgroundColor="#E8E8E8"
                app:chipCornerRadius="11dp"
                android:textSize="12sp"
                android:layout_height="match_parent"/>

            <com.google.android.material.chip.Chip
                android:layout_width="80dp"
                android:text="A-"
                app:checkedIcon="@drawable/ic_whatshot_black_24dp"


                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimary"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                app:chipBackgroundColor="#E8E8E8"
                app:chipCornerRadius="11dp"
                android:textSize="12sp"
                android:layout_height="match_parent"/>

            <com.google.android.material.chip.Chip

                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="80dp"
                app:checkedIcon="@drawable/ic_whatshot_black_24dp"

                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="B+"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                app:chipBackgroundColor="#E8E8E8"
                app:chipCornerRadius="11dp" />

            <com.google.android.material.chip.Chip
                android:layout_width="80dp"
                android:text="B-"
                app:checkedIcon="@drawable/ic_whatshot_black_24dp"


                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimary"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                app:chipBackgroundColor="#E8E8E8"
                app:chipCornerRadius="11dp"
                android:textSize="12sp"
                android:layout_height="match_parent"/>
            <com.google.android.material.chip.Chip
                android:layout_width="80dp"
                android:text="O+"
                app:checkedIcon="@drawable/ic_whatshot_black_24dp"


                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimary"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                app:chipBackgroundColor="#E8E8E8"
                app:chipCornerRadius="11dp"
                android:textSize="12sp"
                android:layout_height="match_parent"/>
            <com.google.android.material.chip.Chip
                android:layout_width="80dp"
                android:text="O-"
                app:checkedIcon="@drawable/ic_whatshot_black_24dp"


                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimary"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                app:chipBackgroundColor="#E8E8E8"
                app:chipCornerRadius="11dp"
                android:textSize="12sp"
                android:layout_height="match_parent"/>
            <com.google.android.material.chip.Chip
                android:layout_width="80dp"
                android:text="AB+"
                app:checkedIcon="@drawable/ic_whatshot_black_24dp"


                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimary"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                app:chipBackgroundColor="#E8E8E8"
                app:chipCornerRadius="11dp"
                android:textSize="12sp"
                android:layout_height="match_parent"/>
            <com.google.android.material.chip.Chip
                android:layout_width="80dp"
                android:text="AB-"
                app:checkedIcon="@drawable/ic_whatshot_black_24dp"


                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimary"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                app:chipBackgroundColor="#E8E8E8"
                app:chipCornerRadius="11dp"
                android:textSize="12sp"
                android:layout_marginEnd="15dp"
                android:layout_height="match_parent"/>
            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

    </HorizontalScrollView>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:id="@+id/lcrv"
        android:scrollbars="none"
        android:background="@android:color/white"
        android:layout_below="@+id/topAppBarnoti"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"

            android:layout_height="match_parent">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="13dp"
                android:text="@string/Area"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:id="@+id/chipgrploc"
                app:singleSelection="true"
                android:layout_height="match_parent"

                app:chipSpacing="25dp">
                <com.google.android.material.chip.Chip
                    android:layout_width="130dp"
                    android:text="Tiruppur (North)"
                    app:checkedIcon="@drawable/ic_location_on_black_24dp"

                    android:textAlignment="center"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorPrimary"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="#E8E8E8"
                    app:chipCornerRadius="11dp"
                    android:textSize="12sp"
                    android:layout_height="match_parent"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="130dp"
                    android:text="Tiruppur (South)"
                    app:checkedIcon="@drawable/ic_location_on_black_24dp"


                    android:textAlignment="center"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorPrimary"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="#E8E8E8"
                    app:chipCornerRadius="11dp"
                    android:textSize="12sp"
                    android:layout_height="match_parent"/>

                <com.google.android.material.chip.Chip

                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="80dp"
                    app:checkedIcon="@drawable/ic_location_on_black_24dp"

                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:text="Avinashi"

                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    app:chipBackgroundColor="#E8E8E8"
                    app:chipCornerRadius="11dp" />

                <com.google.android.material.chip.Chip
                    android:layout_width="100dp"
                    android:text="Kangeyam"
                    app:checkedIcon="@drawable/ic_location_on_black_24dp"


                    android:textAlignment="center"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorPrimary"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="#E8E8E8"
                    app:chipCornerRadius="11dp"
                    android:textSize="12sp"
                    android:layout_height="match_parent"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="130dp"
                    android:text="Udumalaipettai"
                    app:checkedIcon="@drawable/ic_location_on_black_24dp"


                    android:textAlignment="center"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorPrimary"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="#E8E8E8"
                    app:chipCornerRadius="11dp"
                    android:textSize="12sp"
                    android:layout_height="match_parent"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="110dp"
                    android:text="Dharapuram"
                    app:checkedIcon="@drawable/ic_location_on_black_24dp"


                    android:textAlignment="center"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorPrimary"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="#E8E8E8"
                    app:chipCornerRadius="11dp"
                    android:textSize="12sp"
                    android:layout_height="match_parent"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="120dp"
                    android:text="Madathukulam"
                    app:checkedIcon="@drawable/ic_location_on_black_24dp"


                    android:textAlignment="center"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorPrimary"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="#E8E8E8"
                    app:chipCornerRadius="11dp"
                    android:textSize="12sp"
                    android:layout_height="match_parent"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="90dp"
                    android:text="Palladam"
                    app:checkedIcon="@drawable/ic_location_on_black_24dp"


                    android:textAlignment="center"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorPrimary"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="#E8E8E8"
                    app:chipCornerRadius="11dp"
                    android:textSize="12sp"
                    android:layout_height="match_parent"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="90dp"
                    android:text="Other"
                    app:checkedIcon="@drawable/ic_location_on_black_24dp"


                    android:textAlignment="center"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorPrimary"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="#E8E8E8"
                    app:chipCornerRadius="11dp"
                    android:textSize="12sp"
                    android:layout_marginEnd="15dp"
                    android:layout_height="match_parent"/>

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

    </HorizontalScrollView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvfornotifications"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="match_parent"
        android:layout_below="@+id/scrv" />



</RelativeLayout>