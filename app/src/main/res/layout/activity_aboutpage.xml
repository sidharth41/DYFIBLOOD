<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Aboutpage">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBarprofilepage"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="@android:color/white"
        app:title="About developer"



        app:titleTextColor="@color/colorPrimary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/topAppBarprofilepage"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/topAppBarprofilepage"

            android:layout_height="match_parent">




            <com.google.android.material.card.MaterialCardView
                android:layout_width="340dp"
                app:cardElevation="4dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:checkable="true"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="130dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/devcircle"


                        android:layout_height="130dp"/>
                    <TextView
                        android:layout_width="180dp"
                        android:id="@+id/sidharth"
                        android:padding="13dp"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:text="Sidharth"

                        android:textColor="@color/colorPrimary"
                        android:layout_height="58dp"/>

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Developer"

                        android:textAlignment="center"

                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="2dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="2dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:padding="14dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:text="Myself Sidharth, I am doing my Bachelor of Technology(IT) in Thiagarajar College of Engineering,I am a budding app developer.
"
                        android:layout_height="wrap_content"/>










                </LinearLayout>



            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="340dp"
                app:cardElevation="4dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:checkable="true"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="110dp">
                        <ImageView
                            android:layout_width="110dp"
                            android:padding="3dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/aravindcircle"

                            android:layout_height="110dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:padding="13dp"
                                android:id="@+id/aravind"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:clickable="true"
                                android:text="Aravind Srinivas"

                                android:textColor="@color/colorPrimary"
                                android:layout_height="58dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:textAlignment="center"
                                android:textSize="18sp"

                                android:layout_gravity="center_horizontal"

                                android:text="Project Co-ordinator"
                                android:fontFamily="sans-serif-condensed"

                                android:autoLink="web"
                                android:linksClickable="true"

                                android:textColor="@color/colorPrimary"
                                android:layout_height="32dp"/>


                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="340dp"

                app:cardElevation="4dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:checkable="true"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="110dp">
                        <ImageView
                            android:layout_width="110dp"
                            android:padding="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/rjcircle"

                            android:layout_height="110dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="13dp"
                                android:id="@+id/rajaguru"
                                android:text="Rajaguru Selvaraj"
                                android:clickable="true"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimary"

                                android:textSize="24sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="match_parent"
                                android:textAlignment="center"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-condensed"

                                android:layout_gravity="center_horizontal"

                                android:text="Project Initiator and organizer"

                                android:textColor="@color/colorPrimary"
                                android:layout_height="wrap_content"/>


                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"/>


        </LinearLayout>



    </ScrollView>


</RelativeLayout>