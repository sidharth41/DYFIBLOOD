<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/dyfyimage"

        android:layout_centerHorizontal="true"



        android:fontFamily="@font/alfa_slab_one"

        android:id="@+id/dydytext"
        android:text="DYFI"

        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="42sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textStyle="bold"
        android:id="@+id/tprtext"
        android:layout_below="@+id/progressBar"


        android:layout_centerHorizontal="true"
        android:fontFamily="@font/alfa_slab_one"
        android:text="@string/South"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/tprtext"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/alfa_slab_one"
        android:text="@string/South1"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp" />

    <ImageView

        android:id="@+id/dyfyimage"
        android:layout_width="200dp"
        android:layout_centerInParent="true"
        android:layout_height="200dp"
        android:background="@drawable/dyilogo" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_below="@+id/dydytext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        style="?android:attr/progressBarStyle"
        android:layout_width="35dp"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/colorPrimary"
        android:layout_height="35dp" />



</RelativeLayout>